<% title 'Authors' %>

<div id="page-header">
	<%= will_paginate @entries %>
	
	<h1>Authors</h1>
	<div class="clear"></div>
</div>

<% @users.each do |user| %>
  <div class="article">
    <div class="header">
      <div class="share-links">
        Member since <%= datetime_written_out(user) %>
      </div>
      <%= link_to_unless (user.entries.count == 0), user.username, user_entries_path(user) %>
    </div>
    <div class="section">
      <%= link_to_unless (user.entries.count == 0), (pluralize user.entries.count, 'entry'),  user_entries_path(user) %>
    </div>
  </div>
<% end %>

<%= will_paginate @entries %>
