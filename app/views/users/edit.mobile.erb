<% title 'Profile' %>

<h1><%= @user.username %>'s Account</h1>

<%= form_for @user || User.new do |f| %>
<fieldset>
	<legend>Update account details</legend>
	<ol>		
		<li>
			<%= f.label :email, 'E-mail' %>
			<%= f.text_field :email %>
		</li>
		
		<li>
			<%= f.label :password %>
			<%= f.password_field :password %>
		</li>
		
		<li>
			<%= f.label :password_confirmation, 'Confirm password' %>
			<%= f.password_field :password_confirmation %>
		</li>
		
		<li>
			<%= f.submit 'Update account', :class => 'submit' %>
		</li>
	</ol>
</fieldset>
<% end %>

<p class="meta">Note: Only enter a new password if you want to change your current one.</p>
