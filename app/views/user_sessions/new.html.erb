<% form_for @user_session || UserSession.new do |f| %>
	<fieldset>
		<legend>Log in</legend>
		<ol>
			<li>
				<%= f.label :username %>
				<%= f.text_field :username %>
			</li>
			
			<li>
				<%= f.label :password %>
				<%= f.password_field :password %>
			</li>
			
			<li>
				<%= f.submit "Log in" %>
			</li>
		</ol>
	</fieldset>
<% end %>

<p class="meta">
  <%= link_to 'Forgot your password?', new_password_reset_path %><br />
  <%= link_to 'Need another activation email?', new_activation_path %>
</p>
