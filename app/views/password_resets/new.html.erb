<% title 'Reset Password' -%>

<h1>Reset Password</h1>

<% form_tag password_resets_path do %>
  <fieldset>
  	<legend>Enter your e-mail address for password reset instructions</legend>
  	<ol>
  		<li>
  			<%= label_tag 'email', 'E-mail' %>
  			<%= text_field_tag 'email' %>
  		</li>

  		<li>
  			<%= submit_tag 'Send instructions', :class => 'submit' %>
  		</li>
  	</ol>
  </fieldset>
<% end %>
