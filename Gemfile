source :rubygems

gem 'rails', '3.1.0'

gem 'jquery-rails'
gem 'omniauth-contrib', git: "https://github.com/jimmycuadra/omniauth-contrib"

group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end

gem 'thin'

group :production do
  gem 'pg'
end

group :development, :test do
  gem 'foreman'
  gem 'sqlite3'
  gem 'rspec-rails'
  gem 'guard-rspec'
  gem 'factory_girl_rails'
  gem 'simplecov'
  gem 'rb-fsevent'
  gem 'growl_notify'
end
