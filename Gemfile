source :rubygems

gem 'rails'

# Server
gem 'thin'

# View
gem 'haml'
gem 'jquery-rails'

# Assets
gem 'sass-rails'
gem 'bootstrap-sass'
gem 'coffee-rails'
gem 'uglifier'
gem 'rails-backbone'
gem 'haml_coffee_assets'

group :production do
  gem 'pg'
end

group :development, :test do
  gem 'sqlite3'
  gem 'foreman'
  gem 'konacha'
  gem 'poltergeist'
end

group :test do
  gem 'rspec-rails'
  gem 'capybara'
  gem 'factory_girl_rails'
  gem 'simplecov', require: false
end
